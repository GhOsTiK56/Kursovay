<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите раздел физики:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/mechanics_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Механика"
        android:textSize="18sp"
        android:onClick="onMechanicsClick"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/electricity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Электричество"
        android:textSize="18sp"
        android:onClick="onElectricityClick"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/optics_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оптика"
        android:textSize="18sp"
        android:onClick="onOpticsClick"/>
</LinearLayout>